<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextStyle">
        <item name="android:textColor">#4b2e83</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Label" parent="@style/TextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="Gold" parent="@style/Label">
        <item name="android:background">#b7a57a</item>
        <item name="android:textColor">#FF000000</item>
    </style>
    <style name="ButtonMod" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>
</resources>
